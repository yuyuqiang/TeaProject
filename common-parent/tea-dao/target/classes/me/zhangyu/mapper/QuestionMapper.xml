<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="me.zhangyu.mapper.QuestionMapper">

    <!-- 试题插入操作 -->
    <insert id="add" parameterType="me.zhangyu.model.Question">
		insert into question(id,questionType,title,attrA,attrB,attrC,attrD,answer,createTime) values(null,#{qu.questionType},#{qu.title},#{qu.attrA},#{qu.attrB},#{qu.attrC},#{qu.attrD},#{qu.answer},#{qu.createTime})
	</insert>
    <!-- 试题更新操作 -->
    <update id="edit" parameterType="me.zhangyu.model.Question">
		update question set title = #{title},questionType = #{questionType},attrA = #{attrA},attrB = #{attrB},attrC = #{attrC},attrD = #{attrD},answer = #{answer} where id = #{id}
	</update>
    <!-- 试题信息按题目查询 -->
    <select id="findByTitle" parameterType="String" resultType="me.zhangyu.model.Question">
		select * from question where title = #{value}
	</select>
    <!-- 试题信息按id查询 -->
    <select id="findById" parameterType="Long" resultType="me.zhangyu.model.Question">
		select * from question where id = #{value}
	</select>
    <!-- 试题信息搜索查询 -->
    <select id="findList" parameterType="Map" resultType="me.zhangyu.model.Question">
        select * from question where 1 = 1
        <if test="title != null">
            and title like '%${title}%'
        </if>
        <if test="questionType != null">
            and questionType = #{questionType}
        </if>
        <if test="subjectId != null">
            and subjectId = #{subjectId}
        </if>
        <if test="offset != null and pageSize != null">
            limit #{offset},#{pageSize}
        </if>
    </select>
    <!-- 模糊搜索总条数 -->
    <select id="getTotal" parameterType="Map" resultType="Integer">
        select count(*) from question where 1 = 1
        <if test="title != null">
            and title like '%${title}%'
        </if>
        <if test="questionType != null">
            and questionType = #{questionType}
        </if>
        <if test="subjectId != null">
            and subjectId = #{subjectId}
        </if>
        <if test="subjectId != null">
            and subjectId = #{subjectId}
        </if>
    </select>
    <!-- 根据试题类型获取试题数量 -->
    <select id="getQuestionNumByType" parameterType="Map" resultType="Integer">
		select count(*) from question where questionType = ${questionType} and subjectId = ${subjectId}
	</select>
    <!-- 删除试题信息 -->
    <delete id="delete" parameterType="Long">
		delete from question where id =${value}
	</delete>
</mapper>